{
  "name": "myshop",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:run": "./node_modules/.bin/tsc",
    "build:clean": "rm -rf ./dist",
    "copy-files": "mkdir dist && cd dist && mkdir public && cd .. && cp -R ./src/static/** ./dist/public",
    "clean-and-copy": "npm run build:clean && npm run copy-files",
    "build": "npm run clean-and-copy && npm run build:run",
    "serve": "node dist/index.js",
    "start": "npm run watch",
    "watch:ts": "npm run clean-and-copy && \"./node_modules/.bin/tsc\" -w",
    "watch:js": "./node_modules/.bin/nodemon dist/index.js",
    "watch": "npm run clean-and-copy && \"./node_modules/.bin/tsc-watch\" --onSuccess \"npm run watch:js\"",
    "lint:ts": "./node_modules/.bin/tslint --project . --format codeFrame",
    "lint:ts:fix": "npm -s run lint:ts -- --fix"
  },
  "author": "Liran Mordechai",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/express-winston": "^3.0.3",
    "@types/joi": "^14.3.3",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/node": "^12.0.2",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/request": "^2.48.1",
    "@types/request-promise": "^4.1.44",
    "@types/winston": "^2.4.4",
    "nodemon": "^1.19.0",
    "tsc-watch": "^2.2.1",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "express-winston": "^3.1.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "winston": "^3.2.1"
  }
}
